{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.6.0",
      "includeFiles": "**/*"
    }
  },
  "routes": [
    {
      "src": "/(css|js|img)/(.*)",
      "dest": "public/assets/$1/$2"
    },
    {
      "src": "/content/(.*)",
      "dest": "public/content/$1"
    },
    {
      "src": "/",
      "dest": "/api/index.php"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "headers": [
    {
      "source": "/(css|js|img)/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=1, stale-while-revalidate=86400"
        }
      ]
    }
  ]
}

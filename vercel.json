{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.6.0",
      "includeFiles": "**/*"
    }
  },
  "routes": [
    {
      "src": "/(css|js|img)/(.*)",
      "dest": "public/assets/$1/$2",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/content/(.*)",
      "dest": "public/content/$1",
      "headers": { "Cache-Control": "s-maxage=1, stale-while-revalidate=86400" }
    },
    {
      "src": "/",
      "dest": "/api/index.php",
      "headers": { "Cache-Control": "s-maxage=1, stale-while-revalidate=86400" }
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php",
      "headers": { "Cache-Control": "s-maxage=1, stale-while-revalidate=86400" }
    }
  ]
}
